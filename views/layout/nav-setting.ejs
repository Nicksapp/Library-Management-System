<div class="ui menu <%if (user) {%><% if (user.isAdmin) {%> inverted <% } %> <% } %>">
    <div class="header item">Library</div>
    <!-- <a class="active item">Link</a> -->
    <!-- <a class="item">Link</a> -->
   
    <div class="right menu">
        <div class="item">
            <div class="ui action left icon input">
                <i class="search icon"></i>
                <input id="searchInput" type="text" name="payload" placeholder="Title or Author">
                <a id="realSearchPath" href="/search/" style="color: #fff;">
                    <div id="search" class="ui animated green button <%if (user) {%><% if (user.isAdmin) {%> inverted<% } %><% } %>" tabindex="0">
                        <div class="visible content">Submit</div>
                        <div class="hidden content">
                            <i class="right arrow icon"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
       
        <% if (user) { %>
            <a class="item" href="/profile/<%= user._id %>"><%= user.name %></a>
            <div class="divider"></div>
            <a class="item" href="/signout">Sign out</a>
            <% if (user.isAdmin) {%>
                <div class="ui dropdown item">
                    <i class="icon bars"></i>
                    <div class="menu">
                        <a class="item" href="/library">Library management</a>
                    </div>
                </div>
            <% } else { %>
                <div></div>
            <% } %>
        <% } else { %>
            <a class="item" href="/signin">Sign in</a>
            <a class="item" href="/signup">Sign up</a>
        <% } %>
       
        
    </div>
</div>
<script>
    $(document).ready(function() {
        var $search = $('#search'),
            $sInput = $('#searchInput'),
            $sSubmit = $('#realSearchPath');
        
        $search.on('click', function(e) {
            var sData = $sInput[0].value;
            if (sData) {
                $sSubmit[0].href = '/search/' + encodeURIComponent(sData);
            }else {
                e.preventDefault();
            }
        }) 
    })
</script>